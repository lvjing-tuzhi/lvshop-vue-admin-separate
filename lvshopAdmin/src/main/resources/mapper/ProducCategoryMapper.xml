<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvshopadmin.mapper.ProductCategoryMapper">

    <select id="select" resultType="ProductCategory">
        select *
        from product_category;
    </select>
    <select id="selectById" resultType="ProductCategory">
        select *
        from product_category where id = #{id};
    </select>
    <select id="selectByPid" resultType="ProductCategory">
        select *
        from product_category where pid = #{pid};
    </select>
    


</mapper>